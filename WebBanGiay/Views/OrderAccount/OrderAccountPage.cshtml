<!-- Order Account Section Begin -->
<section class="spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Danh sách đơn hàng</h2>
                </div>

                @if (ViewBag.Customer != null)
                {
                    <div class="customer-info mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Thông tin khách hàng</h5>
                                <p style="color:black"><strong>Tên:</strong> @ViewBag.Customer.FullName</p>
                                <p style="color:black"><strong>Số điện thoại:</strong> @ViewBag.Customer.Phone</p>
                                <p style="color:black"><strong>Địa chỉ:</strong> @ViewBag.Customer.Address</p>
                            </div>
                        </div>
                    </div>
                }

                @if (ViewBag.Orders != null && ((List<WebBanGiay.Models.Order>)ViewBag.Orders).Any())
                {
                    <div class="orders-list">
                        @foreach (var order in ViewBag.Orders)
                        {
                            <div class="order-item card mb-3">
                                <div class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h6 class="mb-0">
                                                <strong>Đơn hàng #@order.OrderNumber</strong>
                                            </h6>
                                        </div>
                                        <div class="col-md-6 text-md-right">
                                            <span class="badge badge-@(order.Status == "Completed" ? "success" :
                                                                      order.Status == "Processing" ? "warning" :
                                                                      order.Status == "Shipped" ? "info" :
                                                                      order.Status == "Confirmed" ? "primary" :
                                                                      order.Status == "Cancelled" ? "danger" : "secondary")">
                                                @(order.Status == "Completed" ? "Hoàn thành" :
                                                  order.Status == "Processing" ? "Đang xử lý" :
                                                  order.Status == "Shipped" ? "Đang giao hàng" :
                                                  order.Status == "Confirmed" ? "Đã xác nhận" :
                                                  order.Status == "Cancelled" ? "Đã hủy" : "Chờ xử lý")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Ngày đặt:</strong> @(order.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                                            <p><strong>Tổng tiền:</strong> @(order.TotalAmount.ToString("N0")) VNĐ</p>
                                            @if ((order.DiscountAmount ?? 0) > 0)
                                            {
                                                <p><strong>Giảm giá:</strong> @(order.DiscountAmount.Value.ToString("N0")) VNĐ</p>
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <strong>Phương thức thanh toán:</strong>
                                                @(order.PaymentMethod?.MethodName ?? "N/A")
                                            </p>
                                            <p>
                                                <strong>Trạng thái thanh toán:</strong>
                                                <span class="badge badge-@(order.PaymentStatus == "Paid" ? "success" :
                                                                          order.PaymentStatus == "Failed" ? "danger" :
                                                                          order.PaymentStatus == "Refunded" ? "info" : "warning")">
                                                    @(order.PaymentStatus == "Paid" ? "Đã thanh toán" :
                                                      order.PaymentStatus == "Failed" ? "Thanh toán thất bại" :
                                                      order.PaymentStatus == "Refunded" ? "Đã hoàn tiền" : "Chờ thanh toán")
                                                </span>
                                            </p>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(order.Notes))
                                    {
                                        <div class="mt-3">
                                            <p><strong>Ghi chú:</strong> @order.Notes</p>
                                        </div>
                                    }

                                    <div class="mt-3">
                                        <button class="btn btn-primary btn-sm toggle-details" type="button"
                                                data-order-id="@order.OrderID">
                                            Xem chi tiết đơn hàng
                                        </button>
                                        
                                        @* Nút hủy đơn hàng - chỉ hiển thị khi đơn hàng chưa ở trạng thái đang giao, hoàn thành, đã xác nhận hoặc đã hủy *@
                                        @if (order.Status != "Completed" && order.Status != "Shipped" && order.Status != "Confirmed" && order.Status != "Cancelled")
                                        {
                                            <button class="btn btn-danger btn-sm cancel-order" type="button"
                                                    data-order-id="@order.OrderID"
                                                    data-order-number="@order.OrderNumber"
                                                    style="margin-left: 10px;">
                                                <i class="fa fa-times"></i> Hủy đơn hàng
                                            </button>
                                        }
                                    </div>

                                    <div class="order-details mt-3" id="orderDetails-@order.OrderID" style="display: none;">
                                        <div class="card card-body">
                                            <h6>Chi tiết sản phẩm:</h6>
                                            @if (order.OrderDetails != null)
                                            {
                                                bool hasDetails = false;
                                                <div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Sản phẩm</th>
                                                                <th>Kích thước</th>
                                                                <th>Màu sắc</th>
                                                                <th>Số lượng</th>
                                                                <th>Đơn giá</th>
                                                                <th>Thành tiền</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var detail in order.OrderDetails)
                                                            {
                                                                hasDetails = true;
                                                                <tr>
                                                                    <td>@(detail.ProductVariant?.Product?.ProductName ?? "N/A")</td>
                                                                    <td>@(detail.ProductVariant?.Size?.SizeName ?? "N/A")</td>
                                                                    <td>@(detail.ProductVariant?.Color?.ColorName ?? "N/A")</td>
                                                                    <td>@detail.Quantity</td>
                                                                    <td>@(detail.UnitPrice.ToString("N0")) VNĐ</td>
                                                                    <td>@((detail.UnitPrice * detail.Quantity).ToString("N0")) VNĐ</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                if (!hasDetails)
                                                {
                                                    <p class="text-muted">Không có chi tiết đơn hàng.</p>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-muted">Không có chi tiết đơn hàng.</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="empty-orders">
                            <i class="fa fa-shopping-bag fa-3x text-muted mb-3"></i>
                            <h4>Bạn chưa có đơn hàng nào</h4>
                            <p class="text-muted">Hãy mua sắm để có đơn hàng đầu tiên!</p>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Mua sắm ngay</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Order Account Section End -->

<style>
    .order-item {
