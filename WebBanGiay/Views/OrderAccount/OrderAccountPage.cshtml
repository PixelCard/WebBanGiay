    }

    .table-responsive {
        max-height: 300px;
        overflow-y: auto;
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .order-details {
        transition: all 0.3s ease;
    }
</style>

<script>
    $(document).ready(function () {
        // Xử lý nút toggle chi tiết đơn hàng
        $('.toggle-details').click(function () {
            var orderId = $(this).data('order-id');
            var detailsDiv = $('#orderDetails-' + orderId);
            var button = $(this);

            if (detailsDiv.is(':visible')) {
                detailsDiv.slideUp();
                button.text('Xem chi tiết đơn hàng');
            } else {
                detailsDiv.slideDown();
                button.text('Ẩn chi tiết đơn hàng');
            }
        });

        // Xử lý nút hủy đơn hàng
        $('.cancel-order').click(function () {
            var orderId = $(this).data('order-id');
            var orderNumber = $(this).data('order-number');
            var button = $(this);

            // Hiển thị confirm dialog
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng #' + orderNumber + '?')) {
                // Disable nút để tránh click nhiều lần
                button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Đang xử lý...');

                // Gửi request hủy đơn hàng
                $.ajax({
                    url: '@Url.Action("CancelOrder", "OrderAccount")',
                    type: 'POST',
                    data: { orderId: orderId },
                    success: function (response) {
                        if (response.success) {
                            // Hiển thị thông báo thành công
                            alert('Đã hủy đơn hàng thành công!');
                            // Reload trang để cập nhật trạng thái
                            location.reload();
                        } else {
                            // Hiển thị thông báo lỗi
                            alert('Có lỗi xảy ra: ' + response.message);
                            // Enable lại nút
                            button.prop('disabled', false).html('<i class="fa fa-times"></i> Hủy đơn hàng');
                        }
                    },
                    error: function () {
                        // Hiển thị thông báo lỗi
                        alert('Có lỗi xảy ra khi hủy đơn hàng. Vui lòng thử lại!');
                        // Enable lại nút
                        button.prop('disabled', false).html('<i class="fa fa-times"></i> Hủy đơn hàng');
                    }
                });
            }
        });

        // Debug: Kiểm tra xem có đơn hàng nào không
        console.log('Số lượng đơn hàng:', $('.order-item').length);
        console.log('Số lượng nút toggle:', $('.toggle-details').length);
        console.log('Số lượng nút hủy:', $('.cancel-order').length);
    });
</script>

