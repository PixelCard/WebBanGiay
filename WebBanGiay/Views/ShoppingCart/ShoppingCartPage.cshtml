<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var cart = ViewBag.Cart as List<WebBanGiay.Models.model_class.CartItem>;
                                if (cart != null && cart.Any())
                                {
                                    foreach (var item in cart)
                                    {
                                        <tr>
                                            <td class="shoping__cart__item">
                                                <img src="@Url.Content(item.ProductImage)" alt="@item.ProductName">
                                                <h5>@item.ProductName</h5>
                                                <small>
                                                    <span>Màu: @item.ColorName</span>
                                                    <span> | Size: @item.SizeName</span>
                                                </small>
                                            </td>
                                            <td class="shoping__cart__price">
                                                $@item.Price.ToString("0.00")
                                            </td>
                                            <td class="shoping__cart__quantity">
                                                <div class="quantity">
                                                    <div class="pro-qty">
                                                        <input type="text" value="@item.Quantity" data-variant-id="@item.VariantID" data-price="@item.Price">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="shoping__cart__total" id="total-@item.VariantID">
                                                $@item.TotalPrice.ToString("0.00")
                                            </td>
                                            <td class="shoping__cart__item__close">
                                                <span class="icon_close" data-variant-id="@item.VariantID"></span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <p>Không có sản phẩm nào trong giỏ hàng</p>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Upadate Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Subtotal <span>$@ViewBag.CartTotal.ToString("0.00")</span></li>
                        <li>Total <span>$@ViewBag.CartTotal.ToString("0.00")</span></li>
                    </ul>
                    <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->

<script>
$(document).ready(function() {
    // Update quantity
    $('.pro-qty input').on('change', function() {
        const variantId = $(this).data('variant-id');
        const quantity = parseInt($(this).val());
        
        $.ajax({
            url: '@Url.Action("UpdateQuantity", "ShoppingCart")',
            type: 'POST',
            data: { variantId: variantId, quantity: quantity },
            success: function(response) {
                if (response.success) {
                    $('#total-' + variantId).text('$' + response.totalPrice.toFixed(2));
                    $('.shoping__checkout ul li span').last().text('$' + response.cartTotal.toFixed(2));
                    updateCartIcon(response.cartCount);
                } else {
                    alert(response.message);
                }
            }
        });
    });
    
    // Remove item
    $('.icon_close').on('click', function() {
        const variantId = $(this).data('variant-id');
        const row = $(this).closest('tr');
        
        $.ajax({
            url: '@Url.Action("RemoveItem", "ShoppingCart")',
            type: 'POST',
            data: { variantId: variantId },
            success: function(response) {
                if (response.success) {
                    row.remove();
                    $('.shoping__checkout ul li span').last().text('$' + response.cartTotal.toFixed(2));
                    updateCartIcon(response.cartCount);
                    
                    if (response.cartCount === 0) {
                        location.reload();
                    }
                } else {
                    alert(response.message);
                }
            }
        });
    });
});

function updateCartIcon(cartCount) {
    $('.header__cart ul li a i.fa-shopping-bag + span').text(cartCount);
}
</script>
