<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var cart = ViewBag.Cart as List<WebBanGiay.Models.model_class.CartItem>;
                                if (cart != null && cart.Any())
                                {
                                    foreach (var item in cart)
                                    {
                                        <tr>
                                            <td class="shoping__cart__item">
                                                <img src="@Url.Content(item.ProductImage)" alt="@item.ProductName">
                                                <h5>@item.ProductName</h5>
                                                <small>
                                                    <span>Màu: @item.ColorName</span>
                                                    <span> | Size: @item.SizeName</span>
                                                </small>
                                            </td>
                                            <td class="shoping__cart__price">
                                                @item.Price.ToString("N0") VNĐ
                                            </td>
                                            <td class="shoping__cart__quantity">
                                                <div class="quantity">
                                                    <div class="pro-qty">
                                                        <input type="text" value="@item.Quantity" data-variant-id="@item.VariantID" data-price="@item.Price">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="shoping__cart__total" id="total-@item.VariantID">
                                                @item.TotalPrice.ToString("N0") VNĐ
                                            </td>
                                            <td class="shoping__cart__item__close">
                                                <span class="icon_close" data-variant-id="@item.VariantID"></span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <p>Không có sản phẩm nào trong giỏ hàng</p>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
