    /* Shopping Cart Responsive Design */
    
    /* Desktop (1200px and above) */
    @@media (min-width: 1200px) {
        .shoping__cart__item img {
            max-width: 120px;
            
            height: auto;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
        }
        
        .shoping__cart__item h5 {
            font-size: 25px;
            margin: 8px 0 4px 0;
        }
        
        .shoping__cart__item small {
            font-size: 15px;
        }
    }
    
    /* Tablet (768px - 1199px) */
    @@media (max-width: 1199px) and (min-width: 768px) {
        .shoping__cart__item img {
            max-width: 100px;
            height: auto;
            border-radius: 6px;
        }
        
        .shoping__cart__item h5 {
            font-size: 16px;
            margin: 6px 0 3px 0;
        }
        
        .shoping__cart__item small {
            font-size: 13px;
        }
        
        .shoping__cart__table {
            font-size: 14px;
        }
        
        .pro-qty input {
            width: 50px;
            padding: 6px;
        }
    }
    
    /* Mobile Large (576px - 767px) */
    @@media (max-width: 767px) and (min-width: 576px) {
        .shoping__cart__item img {
            max-width: 80px;
            height: auto;
            border-radius: 4px;
        }
        
        .shoping__cart__item h5 {
            font-size: 15px;
            margin: 5px 0 2px 0;
        }
        
        .shoping__cart__item small {
            font-size: 12px;
        }
        
        .shoping__cart__table {
            font-size: 13px;
        }
        
        .pro-qty input {
            width: 45px;
            padding: 5px;
            font-size: 12px;
        }
        
        .shoping__cart__price,
        .shoping__cart__total {
            font-size: 14px;
            font-weight: 600;
        }
    }
    
    /* Mobile Small (up to 575px) */
    @@media (max-width: 575px) {
        .shoping__cart__table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }
        
        .shoping__cart__table table {
            min-width: 500px;
        }
        
        .shoping__cart__item {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .shoping__cart__item img {
            max-width: 60px;
            height: auto;
            border-radius: 4px;
            flex-shrink: 0;
        }
        
        .shoping__cart__item h5 {
            font-size: 14px;
            margin: 4px 0 2px 0;
            word-wrap: break-word;
            max-width: 120px;
        }
        
        .shoping__cart__item small {
            font-size: 11px;
            display: block;
            line-height: 1.3;
        }
        
        .shoping__cart__table {
            font-size: 12px;
        }
        
        .pro-qty input {
            width: 40px;
            padding: 4px;
            font-size: 11px;
        }
        
        .shoping__cart__price,
        .shoping__cart__total {
            font-size: 13px;
            font-weight: 600;
        }
        
        .shoping__cart__item__close {
            padding: 5px;
        }
        
        .icon_close {
            font-size: 14px;
        }
    }
    
    /* Extra Small Mobile (up to 480px) */
    @@media (max-width: 480px) {
        .shoping__cart__table table {
            min-width: 450px;
        }
        
        .shoping__cart__item img {
            max-width: 50px;
        }
        
        .shoping__cart__item h5 {
            font-size: 13px;
            max-width: 100px;
        }
        
        .shoping__cart__item small {
            font-size: 10px;
        }
        
        .pro-qty input {
            width: 35px;
            padding: 3px;
            font-size: 10px;
        }
        
        .shoping__cart__price,
        .shoping__cart__total {
            font-size: 12px;
        }
    }
    
    /* Cart buttons responsive */
    @@media (max-width: 767px) {
        .shoping__cart__btns {
            flex-direction: column;
            gap: 10px;
        }
        
        .shoping__cart__btns .primary-btn {
            width: 100%;
            text-align: center;
        }
    }
    
    /* Cart total section responsive */
    @@media (max-width: 767px) {
        .shoping__continue,
        .shoping__checkout {
            margin-top: 20px;
        }
    }
    
    @@media (max-width: 575px) {
        .shoping__checkout h5 {
            font-size: 16px;
        }
        
        .shoping__checkout ul li {
            font-size: 14px;
            padding: 8px 0;
        }
        
        .shoping__checkout .primary-btn {
            padding: 12px 20px;
            font-size: 14px;
        }
    }
</style>

