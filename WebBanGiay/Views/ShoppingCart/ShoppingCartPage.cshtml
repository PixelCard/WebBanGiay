<script>
$(document).ready(function () {
        // Bắt sự kiện click cho nút +, -
        $('.pro-qty').on('click', '.qtybtn', function () {
            var $input = $(this).siblings('input');
            var oldVal = parseInt($input.val());
            var newVal = oldVal;

            if ($(this).hasClass('inc')) {
                newVal = oldVal + 1;
            } else if ($(this).hasClass('dec')) {
                newVal = oldVal > 1 ? oldVal - 1 : 1;
            }
            $input.val(newVal);

            // Gọi AJAX cập nhật số lượng
            var variantId = $input.data('variant-id');
            var price = $input.data('price');
            $.ajax({
                url: '@Url.Action("UpdateQuantity", "ShoppingCart")',
                type: 'POST',
                data: { variantId: variantId, quantity: newVal },
                success: function (response) {
                    if (response.success) {
                        $('#total-' + variantId).text(response.totalPrice.toLocaleString('vi-VN') + ' VNĐ');
                        $('.shoping__checkout ul li span').last().text(response.cartTotal.toLocaleString('vi-VN') + ' VNĐ');
                        updateCartIcon(response.cartCount);
                    } else {
                        alert(response.message);
                    }
                }
            });
        });

    // Remove item
    $('.icon_close').on('click', function() {
        const variantId = $(this).data('variant-id');
        const row = $(this).closest('tr');

        $.ajax({
            url: '@Url.Action("RemoveItem", "ShoppingCart")',
            type: 'POST',
            data: { variantId: variantId },
            success: function(response) {
                if (response.success) {
                    row.remove();
                    $('.shoping__checkout ul li span').last().text(response.cartTotal.toLocaleString('vi-VN') + ' VNĐ');
                    updateCartIcon(response.cartCount);

                    if (response.cartCount === 0) {
                        location.reload();
                    }
                } else {
                    alert(response.message);
                }
            }
        });
    });
});

function updateCartIcon(cartCount) {
    $('.header__cart ul li a i.fa-shopping-bag + span').text(cartCount);
}

</script>
