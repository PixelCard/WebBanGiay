                    {
                        <li><a href="@Url.Action("LoginPage", "Account")">Đăng nhập</a></li>
                        <li><a href="@Url.Action("Register", "Account")">Đăng ký</a></li>
                    }
                </ul>
            </li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Liên hệ</a></li>
        </ul>
    </nav>
