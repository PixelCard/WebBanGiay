<!-- Account Details Section Begin -->
<section class="account-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="account-card">
                    <div class="account-header">
                        <h2>Thông tin tài khoản</h2>
                        <p>Xem và quản lý thông tin cá nhân của bạn</p>
                    </div>

                    <div class="account-info">
                        <div class="info-group">
                            <span class="info-label">ID Tài khoản:</span>
                            <span class="info-value">@Model.IDTK</span>
                        </div>

                        <div class="info-group">
                            <span class="info-label">Tên người dùng:</span>
                            <span class="info-value">@Model.UserName</span>
                        </div>

                        <div class="info-group">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@Model.Email</span>
                        </div>

                        <div class="info-group">
                            <span class="info-label">Vai trò:</span>
                            <span class="info-value">
                                @if (Model.Role != null)
                                {
                                    <span class="role-badge">@Model.Role.TenRole</span>
                                }
                                else
                                {
                                    <span class="role-badge">Chưa phân quyền</span>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="account-actions">
                        <a href="@Url.Action("EditAccount", "Account")" class="btn-edit">Chỉnh sửa thông tin</a>
                        <a href="@Url.Action("Index", "Home")" class="btn-back">Quay về trang chủ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Account Details Section End -->

