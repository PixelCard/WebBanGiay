
@{
    ViewBag.Title = "AccountDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .account-details {
        background: #f8f9fa;
        padding: 50px 0;
    }

    .account-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 30px;
        margin-bottom: 30px;
    }

    .account-header {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #7fad39;
    }

        .account-header h2 {
            color: #333;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }

    .account-info {
        margin-bottom: 25px;
    }

    .info-group {
        display: flex;
        margin-bottom: 15px;
        align-items: center;
    }

    .info-label {
        font-weight: 600;
        color: #555;
        min-width: 150px;
        margin-right: 15px;
    }

    .info-value {
        color: #333;
        font-size: 16px;
    }

    .account-actions {
        text-align: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .btn-edit {
        background: #7fad39;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        margin-right: 15px;
        transition: background 0.3s;
    }

        .btn-edit:hover {
            background: #6b9a2f;
            color: white;
            text-decoration: none;
        }

    .btn-back {
        background: #6c757d;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s;
    }

        .btn-back:hover {
            background: #5a6268;
            color: white;
            text-decoration: none;
        }

    .role-badge {
        background: #7fad39;
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
    }

    @@media (max-width: 768px) {
        .account-card {
            padding: 20px;
        }

        .info-group {
            flex-direction: column;
            align-items: flex-start;
        }

        .info-label {
            min-width: auto;
            margin-bottom: 5px;
        }

        .account-actions {
            text-align: center;
        }

        .btn-edit, .btn-back {
            display: block;
            margin: 10px auto;
            width: 200px;
        }
    }
</style>

<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

