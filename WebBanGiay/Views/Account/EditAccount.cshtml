<!-- Edit Account Section Begin -->
<section class="edit-account">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="edit-card">
                    <div class="edit-header">
                        <h2>Chỉnh sửa thông tin</h2>
                        <p>Cập nhật thông tin cá nhân của bạn</p>
                    </div>

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Success
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }

                    @using (Html.BeginForm("EditAccount", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-section">
                            <h3 class="section-title">Thông tin tài khoản</h3>

                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" value="@Model.Email" readonly>
                                <small class="text-muted">Email không thể thay đổi</small>
                            </div>

                            <div class="form-group">
                                <label for="UserName">Tên người dùng</label>
                                <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" required>
                            </div>
                        </div>

                        <div class="form-section">
                            <h3 class="section-title">Thông tin cá nhân</h3>

                            <div class="form-group">
                                <label for="FullName">Họ và tên</label>
                                <input type="text" class="form-control" id="FullName" name="FullName" value="@(ViewBag.Customer?.FullName ?? "")" required>
                            </div>

                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="Phone">Số điện thoại</label>
                                        <input type="tel" class="form-control" id="Phone" name="Phone" value="@(ViewBag.Customer?.Phone ?? "")">
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="Gender">Giới tính</label>
                                        <select class="form-control" id="Gender" name="Gender">
                                            <option value="">Chọn giới tính</option>
                                            <option value="Nam" @(ViewBag.Customer?.Gender == "Nam" ? "selected" : "")>Nam</option>
                                            <option value="Nữ" @(ViewBag.Customer?.Gender == "Nữ" ? "selected" : "")>Nữ</option>
                                            <option value="Khác" @(ViewBag.Customer?.Gender == "Khác" ? "selected" : "")>Khác</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Address">Địa chỉ</label>
                                <textarea class="form-control" id="Address" name="Address" rows="3">@(ViewBag.Customer?.Address ?? "")</textarea>
                            </div>

                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="PreferredSize">Size giày yêu thích</label>
                                        <select class="form-control" id="PreferredSize" name="PreferredSize">
                                            <option value="">Chọn size</option>
                                            <option value="36" @(ViewBag.Customer?.PreferredSize == "36" ? "selected" : "")>36</option>
                                            <option value="37" @(ViewBag.Customer?.PreferredSize == "37" ? "selected" : "")>37</option>
                                            <option value="38" @(ViewBag.Customer?.PreferredSize == "38" ? "selected" : "")>38</option>
                                            <option value="39" @(ViewBag.Customer?.PreferredSize == "39" ? "selected" : "")>39</option>
                                            <option value="40" @(ViewBag.Customer?.PreferredSize == "40" ? "selected" : "")>40</option>
                                            <option value="41" @(ViewBag.Customer?.PreferredSize == "41" ? "selected" : "")>41</option>
                                            <option value="42" @(ViewBag.Customer?.PreferredSize == "42" ? "selected" : "")>42</option>
                                            <option value="43" @(ViewBag.Customer?.PreferredSize == "43" ? "selected" : "")>43</option>
                                            <option value="44" @(ViewBag.Customer?.PreferredSize == "44" ? "selected" : "")>44</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="PreferredBrand">Thương hiệu yêu thích</label>
                                        <input type="text" class="form-control" id="PreferredBrand" name="PreferredBrand" value="@(ViewBag.Customer?.PreferredBrand ?? "")" placeholder="VD: Nike, Adidas, Puma...">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn-save">Lưu thay đổi</button>
                            <a href="@Url.Action("AccountDetails", "Account")" class="btn-cancel">Hủy bỏ</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Edit Account Section End -->
