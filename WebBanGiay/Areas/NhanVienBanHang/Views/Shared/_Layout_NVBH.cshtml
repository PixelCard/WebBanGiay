<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LC_Shoes</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-gray-100 font-sans antialiased">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside id="sidebar" class="bg-gradient-to-b from-blue-800 to-blue-900 text-white w-64 flex-shrink-0 hidden md:flex flex-col transition-all duration-200">
            <div class="px-6 py-6 text-2xl font-bold tracking-wide flex items-center gap-2">
                <i class="fa-solid fa-shoe-prints text-yellow-300"></i>
                LC-Shoes
            </div>
            <nav class="flex-1 px-4 space-y-2 mt-4">
                <a href="@Url.Action("Index", "Promotions")" class="sidebar-link @((ViewContext.RouteData.Values["controller"].ToString() == "Promotions") ? "bg-blue-700" : "hover:bg-blue-700") flex items-center gap-3 px-4 py-2 rounded transition">
                    <i class="fa-solid fa-gift"></i> Promotion
                </a>
                <a href="@Url.Action("OrdersByDate", "Statistics")" class="sidebar-link @((ViewContext.RouteData.Values["controller"].ToString() == "Statistics") ? "bg-blue-700" : "hover:bg-blue-700") flex items-center gap-3 px-4 py-2 rounded transition">
                    <i class="fa-solid fa-chart-line"></i> Statistics
                </a>
                <a href="@Url.Action("Index", "Orders")" class="sidebar-link @((ViewContext.RouteData.Values["controller"].ToString() == "Orders") ? "bg-blue-700" : "hover:bg-blue-700") flex items-center gap-3 px-4 py-2 rounded transition">
                    <i class="fa-solid fa-box"></i> Orders
                </a>
                <a href="@Url.Action("Index", "OrderDetails")" class="sidebar-link @((ViewContext.RouteData.Values["controller"].ToString() == "OrderDetails") ? "bg-blue-700" : "hover:bg-blue-700") flex items-center gap-3 px-4 py-2 rounded transition">
                    <i class="fa-solid fa-list"></i> OrderDetails
                </a>
                <a href="@Url.Action("Index", "Customers")" class="sidebar-link @((ViewContext.RouteData.Values["controller"].ToString() == "Customers") ? "bg-blue-700" : "hover:bg-blue-700") flex items-center gap-3 px-4 py-2 rounded transition">
                    <i class="fa-solid fa-users"></i> Customer
                </a>
            </nav>
            <div class="px-6 py-4 mt-auto border-t border-blue-700">
                <span class="block text-sm text-blue-200 font-semibold">@Session["UserName"]</span>
                <a href="@Url.Action("Logout", "Account", new { area = "" })" class="text-xs text-red-300 hover:text-red-500 mt-1 inline-block"><i class="fa-solid fa-right-from-bracket"></i> Đăng xuất</a>
            </div>
        </aside>

        <!-- Main content -->
        <div class="flex-1 flex flex-col min-h-screen">
            <!-- Header -->
            <header class="bg-white shadow flex items-center justify-between px-6 py-4 sticky top-0 z-10">
                <div class="flex items-center gap-3">
                    <button class="md:hidden text-blue-800 focus:outline-none" onclick="document.getElementById('sidebar').classList.toggle('hidden')">
                        <i class="fa-solid fa-bars fa-lg"></i>
                    </button>
                    <span class="text-xl font-bold text-blue-800 tracking-wide">LC-Shoes</span>
                </div>
                <div class="flex items-center gap-6">
                    <button class="relative text-blue-700 hover:text-blue-900">
                        <i class="fa-regular fa-bell fa-lg"></i>
                        <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full px-1">2</span>
                    </button>
                    <span class="font-semibold text-blue-900">@Session["Email"]</span>
                </div>
            </header>
            <main class="flex-1 p-6">
                @RenderBody()
            </main>
            <footer class="bg-blue-900 text-blue-100 py-4 text-center text-sm">
                &copy; @DateTime.Now.Year LC-Shoes Dashboard. All rights reserved.
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    .sidebar-link.bg-blue-700 {
        font-weight: bold;
        box-shadow: 0 2px 8px 0 rgba(0,0,0,0.04);
    }
</style>