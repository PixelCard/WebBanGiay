@model WebBanGiay.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Chi tiết đơn hàng #@Model.OrderNumber</h1>
        <a href="@Url.Action("Index")" class="text-blue-600 hover:text-blue-800 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Quay lại danh sách
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <!-- Header -->
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-medium text-gray-900">Thông tin cơ bản</h3>
                <span class="px-3 py-1 text-xs font-semibold rounded-full
                    @(Model.Status == "Đã hủy" ? "bg-red-100 text-red-800" :
                      Model.Status == "Đã giao" ? "bg-green-100 text-green-800" :
                      Model.Status == "Đang giao" ? "bg-blue-100 text-blue-800" :
                      "bg-yellow-100 text-yellow-800")">
                    @Model.Status
                </span>
            </div>
        </div>

        <!-- Main Content -->
        <div class="px-6 py-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Thông tin đơn hàng -->
                <div>
                    <h4 class="text-md font-medium text-gray-700 mb-4 pb-2 border-b border-gray-200">Thông tin đơn hàng</h4>
                    <div class="space-y-3">
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Số đơn hàng:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.OrderNumber</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Ngày đặt:</span>
                            <span class="col-span-2 text-sm text-gray-900">@(Model.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có ngày")</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Tổng tiền:</span>
                            <span class="col-span-2 text-sm font-bold text-gray-900">@Model.TotalAmount.ToString("N0") đ</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Giảm giá:</span>
                            <span class="col-span-2 text-sm text-gray-900">@(Model.DiscountAmount?.ToString("N0") ?? "0") đ</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Phí vận chuyển:</span>
                            <span class="col-span-2 text-sm text-gray-900">@(Model.DiscountAmount?.ToString("N0") ?? "0") đ</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Thanh toán:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.PaymentStatus</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Khuyến mãi:</span>
                            <span class="col-span-2 text-sm text-gray-900">@(Model.Promotion?.PromotionName ?? "Không có")</span>
                        </div>
                    </div>
                </div>

                <!-- Thông tin giao hàng -->
                <div>
                    <h4 class="text-md font-medium text-gray-700 mb-4 pb-2 border-b border-gray-200">Thông tin giao hàng</h4>
                    <div class="space-y-3">
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Người nhận:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.ShippingName</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Điện thoại:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.ShippingPhone</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Địa chỉ:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.ShippingAddress</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Ghi chú:</span>
                            <span class="col-span-2 text-sm text-gray-900">@(string.IsNullOrEmpty(Model.Notes) ? "Không có ghi chú" : Model.Notes)</span>
                        </div>
                    </div>

                    <h4 class="text-md font-medium text-gray-700 mt-6 mb-4 pb-2 border-b border-gray-200">Thông tin khác</h4>
                    <div class="space-y-3">
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Khách hàng:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.Customer?.Username</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Nhân viên xử lý:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.Employee?.Username</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Phương thức TT:</span>
                            <span class="col-span-2 text-sm text-gray-900">@Model.PaymentMethod?.MethodName</span>
                        </div>
                        <div class="grid grid-cols-3">
                            <span class="text-sm font-medium text-gray-500">Ngày xử lý:</span>
                            <span class="col-span-2 text-sm text-gray-900">@(Model.ProcessedDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa xử lý")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
            <a href="@Url.Action("Edit", new { id = Model.OrderID })" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Chỉnh sửa
            </a>
            @if (Model.Status != "Đã hủy")
            {
                <a href="@Url.Action("Cancel", new { id = Model.OrderID })" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700">
                    <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                    Hủy đơn hàng
                </a>
            }
        </div>
    </div>
</div>
