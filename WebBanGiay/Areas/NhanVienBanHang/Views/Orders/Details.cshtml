@model WebBanGiay.Models.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Chi tiết đơn hàng #@Model.OrderNumber
                    </h3>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.OrderID })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Mã đơn hàng</label>
                                        <div class="form-control-plaintext fw-bold">@Model.OrderNumber</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Ngày đặt hàng</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-primary">@(Model.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có ngày")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Tổng tiền hàng</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-success fw-bold">@(Model.SubTotal.ToString("N0") ?? "0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Giảm giá</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-warning">@(Model.DiscountAmount?.ToString("N0") ?? "0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Tổng thanh toán</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-danger fw-bold fs-5">@(Model.TotalAmount.ToString("N0") ?? "0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Phương thức thanh toán</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.PaymentMethod != null)
                                            {
                                                <span class="text-muted">@Model.PaymentMethod.MethodName</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Trạng thái đơn hàng</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">Chờ xử lý</span>
                                            }
                                            else if (Model.Status == "Processing")
                                            {
                                                <span class="badge bg-info">Đang xử lý</span>
                                            }
                                            else if (Model.Status == "Shipped")
                                            {
                                                <span class="badge bg-primary">Đã giao hàng</span>
                                            }
                                            else if (Model.Status == "Delivered")
                                            {
                                                <span class="badge bg-success">Đã nhận hàng</span>
                                            }
                                            else if (Model.Status == "Cancelled")
                                            {
                                                <span class="badge bg-danger">Đã hủy</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.Status</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Trạng thái thanh toán</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.PaymentStatus == "Pending")
                                            {
                                                <span class="badge bg-warning">Chờ thanh toán</span>
                                            }
                                            else if (Model.PaymentStatus == "Paid")
                                            {
                                                <span class="badge bg-success">Đã thanh toán</span>
                                            }
                                            else if (Model.PaymentStatus == "Failed")
                                            {
                                                <span class="badge bg-danger">Thanh toán thất bại</span>
                                            }
                                            else if (Model.PaymentStatus == "Refunded")
                                            {
                                                <span class="badge bg-info">Đã hoàn tiền</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.PaymentStatus</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Khách hàng</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Customer != null)
                                            {
                                                <span class="text-muted">@Model.Customer.FullName</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Nhân viên xử lý</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Employee != null)
                                            {
                                                <span class="text-muted">@Model.Employee.FullName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Chưa có nhân viên xử lý</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-bold text-muted">Ghi chú</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Notes))
                                    {
                                        @Model.Notes
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có ghi chú</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-shipping-fast me-1"></i>Thông tin giao hàng
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-muted small">Người nhận</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Shipping != null)
                                            {
                                                <span class="text-muted">@Model.Shipping.ShippingName</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-muted small">Điện thoại</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Shipping != null)
                                            {
                                                <span class="text-muted">@Model.Shipping.ShippingPhone</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-muted small">Địa chỉ giao hàng</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Shipping != null)
                                            {
                                                <span class="text-muted">@Model.Shipping.ShippingAddress</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-muted small">Khuyến mãi</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Promotion != null)
                                            {
                                                <span class="badge bg-info">@Model.Promotion.PromotionName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có khuyến mãi</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-muted small">Ngày xử lý</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.ProcessedDate.HasValue)
                                            {
                                                <small class="text-muted">@Model.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Chưa xử lý</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (Model.Status != "Shipped" && Model.Status != "Delivered" && Model.Status != "Cancelled")
                            {
                                <div class="mt-3">
                                    <a href="@Url.Action("Cancel", new { id = Model.OrderID })" class="btn btn-danger w-100">
                                        <i class="fas fa-times me-1"></i>Hủy đơn hàng
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="mt-3">
                                    <div class="alert alert-warning py-2">
                                        <small>
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            <strong>Không thể hủy:</strong><br>
                                            @if (Model.Status == "Shipped")
                                            {
                                                <span>Đơn hàng đã được giao</span>
                                            }
                                            else if (Model.Status == "Delivered")
                                            {
                                                <span>Đơn hàng đã được nhận</span>
                                            }
                                            else if (Model.Status == "Cancelled")
                                            {
                                                <span>Đơn hàng đã bị hủy</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
