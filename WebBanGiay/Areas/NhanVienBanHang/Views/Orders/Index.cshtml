@model IEnumerable<WebBanGiay.Models.Order>

@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>Danh sách đơn hàng
                    </h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Tạo mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                    <th>Thanh toán</th>
                                    <th>Khách hàng</th>
                                    <th>Địa chỉ giao hàng</th>
                                    <th>Nhân viên xử lý</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.OrderNumber)</strong>
                                        </td>
                                        <td>
                                            @if (item.OrderDate.HasValue)
                                            {
                                                <small class="text-muted">@item.OrderDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">Chờ xử lý</span>
                                            }
                                            else if (item.Status == "Processing")
                                            {
                                                <span class="badge bg-info">Đang xử lý</span>
                                            }
                                            else if (item.Status == "Shipped")
                                            {
                                                <span class="badge bg-primary">Đã giao hàng</span>
                                            }
                                            else if (item.Status == "Delivered")
                                            {
                                                <span class="badge bg-success">Đã nhận hàng</span>
                                            }
                                            else if (item.Status == "Cancelled")
                                            {
                                                <span class="badge bg-danger">Đã hủy</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.Status</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">@(item.TotalAmount.ToString("N0") ?? "0") VNĐ</span>
                                        </td>
                                        <td>
                                            @if (item.PaymentStatus == "Pending")
                                            {
                                                <span class="badge bg-warning">Chờ thanh toán</span>
                                            }
                                            else if (item.PaymentStatus == "Paid")
                                            {
                                                <span class="badge bg-success">Đã thanh toán</span>
                                            }
                                            else if (item.PaymentStatus == "Failed")
                                            {
                                                <span class="badge bg-danger">Thanh toán thất bại</span>
                                            }
                                            else if (item.PaymentStatus == "Refunded")
                                            {
                                                <span class="badge bg-info">Đã hoàn tiền</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.PaymentStatus</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Customer != null)
                                            {
                                                <span class="text-muted">@item.Customer.FullName</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Shipping != null)
                                            {
                                                <span class="text-muted">@(item.Shipping.ShippingAddress?.Length > 50 ? item.Shipping.ShippingAddress.Substring(0, 50) + "..." : item.Shipping.ShippingAddress)</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Employee != null)
                                            {
                                                <span class="text-muted">@item.Employee.FullName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Chưa có</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = item.OrderID })" 
                                                   class="btn btn-sm btn-outline-info" 
                                                   title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = item.OrderID })" 
                                                   class="btn btn-sm btn-outline-warning" 
                                                   title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (item.Status != "Shipped" && item.Status != "Delivered" && item.Status != "Cancelled")
                                                {
                                                    <a href="@Url.Action("Cancel", new { id = item.OrderID })" 
                                                       class="btn btn-sm btn-outline-danger" 
                                                       title="Hủy đơn hàng"
                                                       onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>