@model WebBanGiay.Models.OrderDetail

@{
    ViewBag.Title = "Chi tiết sản phẩm trong đơn hàng";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Chi tiết sản phẩm trong đơn hàng
                    </h3>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Số lượng</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge @(Model.Quantity >= 10 ? "bg-danger" : "bg-primary") fs-6">
                                                @Model.Quantity
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Đơn giá</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-success fw-bold">@Model.UnitPrice.ToString("N0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Thành tiền</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-danger fw-bold fs-5">@Model.TotalPrice.ToString("N0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Mã đơn hàng</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Order != null && !string.IsNullOrEmpty(Model.Order.OrderNumber))
                                            {
                                                <span class="text-primary fw-bold">@Model.Order.OrderNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có mã đơn hàng</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-bold text-muted">Mã SKU</label>
                                <div class="form-control-plaintext">
                                    @if (Model.ProductVariant != null && !string.IsNullOrEmpty(Model.ProductVariant.SKU))
                                    {
                                        <span class="text-muted">@Model.ProductVariant.SKU</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có SKU</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-box me-1"></i>Thông tin sản phẩm
                                    </h6>
                                </div>
                                <div class="card-body">
                                    @if (Model.ProductVariant != null)
                                    {
                                        <div class="mb-3">
                                            <label class="form-label fw-bold text-muted small">Tên sản phẩm</label>
                                            <div class="form-control-plaintext">
                                                @if (Model.ProductVariant.Product != null && !string.IsNullOrEmpty(Model.ProductVariant.Product.ProductName))
                                                {
                                                    <span class="text-muted">@Model.ProductVariant.Product.ProductName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Không có tên sản phẩm</span>
                                                }
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label fw-bold text-muted small">Kích thước</label>
                                            <div class="form-control-plaintext">
                                                @if (Model.ProductVariant.Size != null && !string.IsNullOrEmpty(Model.ProductVariant.Size.SizeName))
                                                {
                                                    <span class="text-muted">@Model.ProductVariant.Size.SizeName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Không có kích thước</span>
                                                }
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label fw-bold text-muted small">Màu sắc</label>
                                            <div class="form-control-plaintext">
                                                @if (Model.ProductVariant.Color != null && !string.IsNullOrEmpty(Model.ProductVariant.Color.ColorName))
                                                {
                                                    <span class="text-muted">@Model.ProductVariant.Color.ColorName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Không có màu sắc</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            Không có thông tin sản phẩm
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </div>
</div>
