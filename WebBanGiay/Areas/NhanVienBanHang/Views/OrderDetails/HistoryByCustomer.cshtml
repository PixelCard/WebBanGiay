@model List<WebBanGiay.Models.OrderDetail>
@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
    var customer = ViewBag.Customer as WebBanGiay.Models.Customer;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>Lịch sử mua hàng của khách hàng
                    </h3>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
                <div class="card-body">
                    @if (customer != null)
                    {
                        <div class="alert alert-info mb-4">
                            <div class="row">
                                <div class="col-md-4">
                                    <strong><i class="fas fa-user me-1"></i>Tên khách hàng:</strong><br>
                                    <span class="text-muted">@customer.FullName</span>
                                </div>
                                <div class="col-md-4">
                                    <strong><i class="fas fa-phone me-1"></i>Số điện thoại:</strong><br>
                                    <span class="text-muted">@customer.Phone</span>
                                </div>
                                <div class="col-md-4">
                                    <strong><i class="fas fa-map-marker-alt me-1"></i>Địa chỉ:</strong><br>
                                    <span class="text-muted">@customer.Address</span>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Ngày đặt</th>
                                        <th>Mã đơn hàng</th>
                                        <th>Trạng thái</th>
                                        <th>Sản phẩm</th>
                                        <th>Kích thước</th>
                                        <th>Màu sắc</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (detail.Order?.OrderDate.HasValue == true)
                                                {
                                                    <small class="text-muted">@detail.Order.OrderDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-primary fw-bold">@detail.Order?.OrderNumber</span>
                                            </td>
                                            <td>
                                                @if (detail.Order?.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">Chờ xử lý</span>
                                                }
                                                else if (detail.Order?.Status == "Processing")
                                                {
                                                    <span class="badge bg-info">Đang xử lý</span>
                                                }
                                                else if (detail.Order?.Status == "Shipped")
                                                {
                                                    <span class="badge bg-primary">Đã giao hàng</span>
                                                }
                                                else if (detail.Order?.Status == "Delivered")
                                                {
                                                    <span class="badge bg-success">Đã nhận hàng</span>
                                                }
                                                else if (detail.Order?.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@detail.Order?.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-muted">@detail.ProductVariant?.Product?.ProductName</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@detail.ProductVariant?.Size?.SizeName</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@detail.ProductVariant?.Color?.ColorName</span>
                                            </td>
                                            <td>
                                                <span class="badge @(detail.Quantity >= 10 ? "bg-danger" : "bg-primary")">
                                                    @detail.Quantity
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">@detail.UnitPrice.ToString("N0") VNĐ</span>
                                            </td>
                                            <td>
                                                <span class="text-danger fw-bold">@detail.TotalPrice.ToString("N0") VNĐ</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Khách hàng này chưa có lịch sử mua hàng.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

