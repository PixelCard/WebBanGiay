@model IEnumerable<WebBanGiay.Models.OrderDetail>

@{
    ViewBag.Title = "Danh sách chi tiết đơn hàng";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Danh sách chi tiết đơn hàng
                    </h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Tạo mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                    <th>Mã đơn hàng</th>
                                    <th>Mã SKU</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge @(item.Quantity >= 10 ? "bg-danger" : "bg-primary")">
                                                @item.Quantity
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">@item.UnitPrice.ToString("N0") VNĐ</span>
                                        </td>
                                        <td>
                                            <span class="text-danger fw-bold">@item.TotalPrice.ToString("N0") VNĐ</span>
                                        </td>
                                        <td>
                                            @if (item.Order != null && !string.IsNullOrEmpty(item.Order.OrderNumber))
                                            {
                                                <span class="text-primary fw-bold">@item.Order.OrderNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có mã</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.ProductVariant != null && !string.IsNullOrEmpty(item.ProductVariant.SKU))
                                            {
                                                <span class="text-muted">@item.ProductVariant.SKU</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có SKU</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = item.OrderDetailID })" 
                                                   class="btn btn-sm btn-outline-info" 
                                                   title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (item.OrderID.HasValue)
                                                {
                                                    <a href="@Url.Action("HistoryByCustomer", new { id = item.OrderID.Value })" 
                                                       class="btn btn-sm btn-outline-secondary" 
                                                       title="Lịch sử đơn hàng">
                                                        <i class="fas fa-history"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
