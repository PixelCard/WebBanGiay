@model WebBanGiay.Models.Promotion

@{
    ViewBag.Title = "Chỉnh sửa Khuyến mãi";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa Khuyến mãi
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.PromotionID)
                        @Html.HiddenFor(model => model.PromotionName)
                        @Html.HiddenFor(model => model.Description)
                        @Html.HiddenFor(model => model.DiscountType)
                        @Html.HiddenFor(model => model.MaxDiscountAmount)
                        @Html.HiddenFor(model => model.StartDate)
                        @Html.HiddenFor(model => model.EndDate)
                        @Html.HiddenFor(model => model.UsageLimit)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.HiddenFor(model => model.IsActive)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Tên khuyến mãi</label>
                                    <div class="form-control-plaintext fw-bold">@Model.PromotionName</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Loại giảm giá</label>
                                    <div class="form-control-plaintext">
                                        @if (Model.DiscountType == "Percentage")
                                        {
                                            <span class="badge bg-info">Phần trăm (%)</span>
                                        }
                                        else if (Model.DiscountType == "FixedAmount")
                                        {
                                            <span class="badge bg-warning">Tiền (VNĐ)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Model.DiscountType</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Giảm tối đa (Admin thiết lập)</label>
                                    <div class="form-control-plaintext">
                                        @if (Model.MaxDiscountAmount.HasValue)
                                        {
                                            <span class="text-danger fw-bold">@Model.MaxDiscountAmount.Value.ToString("N0") VNĐ</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không giới hạn</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(model => model.DiscountValue, "Giá trị giảm *", new { @class = "form-label fw-bold" })
                                    @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập giá trị giảm", max = Model.MaxDiscountAmount } })
                                    @Html.ValidationMessageFor(model => model.DiscountValue, "", new { @class = "text-danger small" })
                                    <small class="text-muted">
                                        @if (Model.MaxDiscountAmount.HasValue)
                                        {
                                            <span>Tối đa: @Model.MaxDiscountAmount.Value.ToString("N0") VNĐ</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Ngày bắt đầu</label>
                                    <div class="form-control-plaintext">
                                        <span class="text-primary">@Model.StartDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Ngày kết thúc</label>
                                    <div class="form-control-plaintext">
                                        <span class="text-warning">@Model.EndDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Trạng thái</label>
                                    <div class="form-control-plaintext">
                                        @if (Model.IsActive == true)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Không hoạt động</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold text-muted">Giới hạn sử dụng</label>
                                    <div class="form-control-plaintext">
                                        @if (Model.UsageLimit.HasValue)
                                        {
                                            <span class="text-muted">@Model.UsageLimit.Value lần</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không giới hạn</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold text-muted">Mô tả</label>
                            <div class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Không có mô tả</span>
                                }
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="alert alert-warning py-2">
                                <small>
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    <strong>Lưu ý:</strong><br>
                                    • Chỉ có thể chỉnh sửa <strong>Giá trị giảm</strong><br>
                                    • Giá trị giảm không được vượt quá <strong>Giảm tối đa</strong> do Admin thiết lập<br>
                                    • Các thông tin khác chỉ để tham khảo, không thể chỉnh sửa
                                </small>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Lưu thay đổi
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Client-side validation to ensure DiscountValue doesn't exceed MaxDiscountAmount
    document.addEventListener('DOMContentLoaded', function() {
        const discountValueInput = document.querySelector('input[name="DiscountValue"]');
        const maxDiscountAmount = @(Model.MaxDiscountAmount.HasValue ? Model.MaxDiscountAmount.Value : 0);
        
        if (discountValueInput && maxDiscountAmount > 0) {
            discountValueInput.addEventListener('input', function() {
                const value = parseFloat(this.value) || 0;
                if (value > maxDiscountAmount) {
                    this.setCustomValidity('Giá trị giảm không được vượt quá ' + maxDiscountAmount.toLocaleString() + ' VNĐ');
                    this.classList.add('is-invalid');
                } else {
                    this.setCustomValidity('');
                    this.classList.remove('is-invalid');
                }
            });
        }
    });
</script>
