@model IEnumerable<WebBanGiay.Models.Customer>
@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Danh sách khách hàng</h3>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                    <th>@Html.DisplayNameFor(m => m.Address)</th>
                    <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(m => m.Gender)</th>
                    <th>@Html.DisplayNameFor(m => m.Account.Email)</th>
                    <th>@Html.DisplayNameFor(m => m.LoaiKhachHang.LoaiKhachHangName)</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Account.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.LoaiKhachHang.LoaiKhachHangName)</td>
                        <td>
                            <div class="d-flex gap-1">
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }, new { @class = "btn btn-sm btn-info" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
