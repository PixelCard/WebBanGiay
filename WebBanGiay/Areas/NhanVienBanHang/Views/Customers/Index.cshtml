@model IEnumerable<WebBanGiay.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 px-4 py-2 gap-4">
    <h2 class="text-2xl font-bold">Customer List</h2>
    @Html.ActionLink("Create New", "Create", null, new { @class = "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded whitespace-nowrap" })
</div>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                    @Html.DisplayNameFor(model => model.PasswordHash)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden 2xl:table-cell">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden 2xl:table-cell">
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                    @Html.DisplayNameFor(model => model.SMSNotification)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">
                    @Html.DisplayNameFor(model => model.LastLogin)
                </th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden sm:table-cell">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden md:table-cell">
                        @Html.DisplayFor(modelItem => item.PasswordHash)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden lg:table-cell">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden 2xl:table-cell">
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden 2xl:table-cell">
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden md:table-cell">
                        @Html.DisplayFor(modelItem => item.SMSNotification)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden lg:table-cell">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell">
                        @Html.DisplayFor(modelItem => item.LastLogin)
                    </td>
                    <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex flex-col sm:flex-row sm:space-x-2 space-y-1 sm:space-y-0">
                            @Html.ActionLink("Details", "Details", new { id = item.CustomerID }, new { @class = "text-green-600 hover:text-green-900" })
                            <span class="hidden sm:inline">|</span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID }, new { @class = "text-red-600 hover:text-red-900" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
