@model IEnumerable<WebBanGiay.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<h2 class="text-2xl font-bold mb-6">Customer List</h2>
<table class="min-w-full divide-y divide-gray-200 shadow rounded bg-white">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().Phone)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().Address)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().DateOfBirth)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().Gender)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().CreatedDate)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.First().Account.Email)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">@item.FullName</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.Phone</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.Address</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.DateOfBirth</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.Gender</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.IsActive</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.CreatedDate</td>
                <td class="px-6 py-4 whitespace-nowrap">@item.Account.Email</td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <a href="@Url.Action("Details", new { id = item.CustomerID })" class="text-green-600 hover:underline mr-2">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
