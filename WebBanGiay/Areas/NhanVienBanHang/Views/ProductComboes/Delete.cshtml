@model WebBanGiay.Models.ProductCombo
@{
    ViewBag.Title = "Xóa combo sản phẩm";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Xóa combo sản phẩm
                    </h3>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Bạn có chắc chắn muốn xóa combo này?
                        </h6>
                        <p class="mb-0">Hành động này không thể hoàn tác. Tất cả thông tin combo sẽ bị xóa vĩnh viễn.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Tên combo</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-primary fw-bold">@Model.ComboName</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Giá combo</label>
                                        <div class="form-control-plaintext">
                                            <span class="text-success fw-bold">@Model.ComboPrice.ToString("N0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Ngày bắt đầu</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.startDate.HasValue)
                                            {
                                                <span class="text-muted">@Model.startDate.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Chưa có ngày</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Ngày kết thúc</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.endDate.HasValue)
                                            {
                                                <span class="text-muted">@Model.endDate.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Chưa có ngày</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-bold text-muted">Mô tả</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Model.Description
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có mô tả</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Lưu ý
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-muted small">Trạng thái hiện tại</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Không hoạt động</span>
                                            }
                                        </div>
                                    </div>

                                    @if (Model.endDate.HasValue)
                                    {
                                        var daysLeft = (Model.endDate.Value - DateTime.Now).Days;
                                        <div class="mb-3">
                                            <label class="form-label fw-bold text-muted small">Thời gian còn lại</label>
                                            <div class="form-control-plaintext">
                                                @if (daysLeft > 0)
                                                {
                                                    <span class="badge bg-info">Còn @daysLeft ngày</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Đã hết hạn</span>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <div class="alert alert-warning">
                                        <small>
                                            <i class="fas fa-info-circle me-1"></i>
                                            <strong>Hậu quả:</strong><br>
                                            • Tất cả sản phẩm trong combo sẽ bị xóa<br>
                                            • Không thể khôi phục dữ liệu<br>
                                            • Ảnh hưởng đến đơn hàng hiện tại
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mt-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Hủy
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
