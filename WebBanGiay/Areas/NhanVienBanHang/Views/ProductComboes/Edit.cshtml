@model WebBanGiay.Models.ProductCombo
@{
    ViewBag.Title = "Chỉnh sửa combo sản phẩm";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container mx-auto max-w-xl px-4 py-8">
    <h2 class="mb-6 text-center text-2xl font-bold text-blue-900 tracking-wide">Chỉnh sửa combo sản phẩm</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ComboID)
        <div class="space-y-5 bg-white p-6 rounded-lg shadow">
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-2" })
            <div>
                @Html.LabelFor(model => model.ComboName, htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.EditorFor(model => model.ComboName, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                @Html.ValidationMessageFor(model => model.ComboName, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.ComboPrice, htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.EditorFor(model => model.ComboPrice, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                @Html.ValidationMessageFor(model => model.ComboPrice, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.ImageURL, htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                <div class="flex items-center gap-2">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "font-semibold mb-1" })
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>
            <div class="flex justify-end gap-2 mt-4">
                <input type="submit" value="Lưu" class="btn bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow transition" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded shadow transition" })
            </div>
        </div>
    }
</div>
