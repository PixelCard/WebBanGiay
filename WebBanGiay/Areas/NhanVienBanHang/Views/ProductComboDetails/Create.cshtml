@model WebBanGiay.Models.ProductComboDetail
@{
    ViewBag.Title = "Thêm sản phẩm vào combo";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container mx-auto max-w-xl px-4 py-8">
    <h2 class="mb-6 text-center text-2xl font-bold text-blue-900 tracking-wide">Thêm sản phẩm vào combo</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="space-y-5 bg-white p-6 rounded-lg shadow">
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-2" })
            <div>
                @Html.LabelFor(model => model.ComboID, "Combo", htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.DropDownList("ComboID", null, htmlAttributes: new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" })
                @Html.ValidationMessageFor(model => model.ComboID, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.ProductID, "Sản phẩm", htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.DropDownList("ProductID", null, htmlAttributes: new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" })
                @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.VariantID, "Biến thể", htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.DropDownList("VariantID", null, htmlAttributes: new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" })
                @Html.ValidationMessageFor(model => model.VariantID, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "block font-semibold mb-1" })
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div class="flex justify-end gap-2 mt-4">
                <input type="submit" value="Thêm" class="btn bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow transition" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded shadow transition" })
            </div>
        </div>
    }
</div>
