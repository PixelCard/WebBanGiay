@model IEnumerable<WebBanGiay.Models.ProductComboDetail>
@{
    ViewBag.Title = "Danh sách chi tiết combo sản phẩm";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-boxes me-2"></i>Danh sách chi tiết combo sản phẩm
                    </h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Tạo mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Combo</th>
                                    <th>Sản phẩm</th>
                                    <th>Biến thể</th>
                                    <th>Số lượng</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.ProductCombo != null && !string.IsNullOrEmpty(item.ProductCombo.ComboName))
                                                {
                                                    <span class="text-primary fw-bold">@item.ProductCombo.ComboName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Không có tên combo</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Product != null && !string.IsNullOrEmpty(item.Product.ProductName))
                                                {
                                                    <span class="text-muted">@item.Product.ProductName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Không có tên sản phẩm</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.ProductVariant != null && !string.IsNullOrEmpty(item.ProductVariant.SKU))
                                                {
                                                    <span class="text-muted">@item.ProductVariant.SKU</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Không có SKU</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.Quantity</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = item.ComboDetailID })" 
                                                       class="btn btn-sm btn-outline-info" 
                                                       title="Chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = item.ComboDetailID })" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = item.ComboDetailID })" 
                                                       class="btn btn-sm btn-outline-danger" 
                                                       title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Không có dữ liệu.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
