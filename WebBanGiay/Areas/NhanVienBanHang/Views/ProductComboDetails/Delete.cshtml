@model WebBanGiay.Models.ProductComboDetail
@{
    ViewBag.Title = "Xóa chi tiết combo sản phẩm";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Xóa chi tiết combo sản phẩm
                    </h3>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Bạn có chắc chắn muốn xóa chi tiết này?</strong>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Combo</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.ProductCombo != null && !string.IsNullOrEmpty(Model.ProductCombo.ComboName))
                                            {
                                                <span class="text-primary fw-bold">@Model.ProductCombo.ComboName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có tên combo</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Số lượng</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge bg-info fs-6">@Model.Quantity</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Sản phẩm</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.Product != null && !string.IsNullOrEmpty(Model.Product.ProductName))
                                            {
                                                <span class="text-success fw-bold">@Model.Product.ProductName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có tên sản phẩm</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold text-muted">Mã SKU</label>
                                        <div class="form-control-plaintext">
                                            @if (Model.ProductVariant != null && !string.IsNullOrEmpty(Model.ProductVariant.SKU))
                                            {
                                                <span class="text-muted">@Model.ProductVariant.SKU</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có SKU</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Lưu ý
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted small">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Hành động này không thể hoàn tác. Dữ liệu sẽ bị xóa vĩnh viễn.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mt-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Hủy
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
