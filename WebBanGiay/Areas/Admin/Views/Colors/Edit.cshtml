@model WebBanGiay.Models.Color

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="max-w-xl mx-auto mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit Color</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ColorID)
        @Html.ValidationSummary(true, "", new { @class = "text-red-500" })
        <div class="space-y-5">
            <div>
                @Html.LabelFor(model => model.ColorName, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.ColorName, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } })
                @Html.ValidationMessageFor(model => model.ColorName, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.ColorCode, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                <div class="flex items-center space-x-2">
                    @Html.EditorFor(model => model.ColorCode, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50", Type = "color" } })
                    <div class="w-10 h-10 rounded border border-gray-300" id="colorPreview"></div>
                </div>
                @Html.ValidationMessageFor(model => model.ColorCode, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div>
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                <div class="flex items-center space-x-2">
                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "rounded border-gray-300 focus:ring-blue-500" } })
                    <span class="text-gray-600">
                </div>
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-red-500 text-sm" })
            </div>
            <div class="flex justify-between items-center pt-4">
                <input type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded shadow transition duration-150" />
                <a href="@Url.Action("Index")" class="text-gray-600 hover:underline text-blue-600">Back to List</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script>
        $(function () {
            // Cập nhật preview màu khi thay đổi
            $('#ColorCode').on('input', function() {
                $('#colorPreview').css('background-color', $(this).val());
            });
            
            // Khởi tạo preview màu ban đầu
            $('#colorPreview').css('background-color', $('#ColorCode').val());
        });
    </script>
}
