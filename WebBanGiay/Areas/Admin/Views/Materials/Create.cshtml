@model WebBanGiay.Models.Material

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="max-w-xl mx-auto mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-6">Create Material</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-red-500" })
        <div class="space-y-5">
            <div>
                @Html.LabelFor(model => model.MaterialType, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.DropDownListFor(model => model.MaterialType, 
                    new SelectList(new[] {
                        "Vải",
                        "Vải cotton",
                        "Vải bám dính",
                        "Vải da",
                        "Vải lưới",
                        "Vải canvas",
                        "Vải denim",
                        "Vải len",
                        "Vải polyester",
                        "Vải nylon"
                    }), 
                    "Chọn loại nguyên liệu", 
                    new { @class = "mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" })
                @Html.ValidationMessageFor(model => model.MaterialType, "", new { @class = "text-red-500" })
            </div>

            <div class="flex justify-between items-center pt-4">
                <input type="submit" value="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded shadow transition duration-150" />
                <a href="@Url.Action("Index")" class="text-gray-600 hover:underline text-blue-600">Back to List</a>
            </div>
        </div>
    }
</div>
