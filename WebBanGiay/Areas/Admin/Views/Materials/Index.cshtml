@model IEnumerable<WebBanGiay.Models.Material>

@{
    ViewBag.Title = "Materials Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Materials Management</h1>
        <a href="@Url.Action("Create")" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
            + Create New Material
        </a>
    </div>
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.MaterialID)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.MaterialType)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model) {
                        <tr class="hover:bg-gray-50 transition duration-150">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@Html.DisplayFor(modelItem => item.MaterialID)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@Html.DisplayFor(modelItem => item.MaterialType)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex space-x-2">
                                    <a href="@Url.Action("Edit", new { id = item.MaterialID })" class="text-indigo-600 hover:text-indigo-900 transition duration-150 underline">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.MaterialID })" class="text-blue-600 hover:text-blue-900 transition duration-150 underline">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.MaterialID })" class="text-red-600 hover:text-red-900 transition duration-150 underline">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
