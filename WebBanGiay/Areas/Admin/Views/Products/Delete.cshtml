@model WebBanGiay.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Delete Product</h2>
        <div class="w-20 h-1 bg-red-500 mb-4"></div>
        <h3 class="text-lg font-medium text-gray-700">Are you sure you want to delete this product?</h3>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6 mb-8 border border-gray-100">
        <h4 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">Product Details</h4>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Column 1 -->
            <div class="space-y-4">
                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ProductName)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.ProductName)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ProductCode)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.ProductCode)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Description)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.Description)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Material)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.Material)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Gender)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.Gender)</span>
                </div>
            </div>

            <!-- Column 2 -->
            <div class="space-y-4">
                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.BasePrice)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.BasePrice)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.IsActive)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.IsActive)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.CreatedDate)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.CreatedDate)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Brand.BrandName)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.Brand.BrandName)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Category.CategoryName)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.Category.CategoryName)</span>
                </div>

                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Employee.Username)</span>
                    <span class="text-base font-normal text-gray-800 mt-1">@Html.DisplayFor(model => model.Employee.Username)</span>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="flex items-center justify-between">
            <button type="submit" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md shadow-sm transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                <i class="fas fa-trash-alt mr-2"></i> Confirm Delete
            </button>

            <a href="@Url.Action("Index")" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                <i class="fas fa-arrow-left mr-2"></i> Back to List
            </a>
        </div>
    }
</div>