@model WebBanGiay.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-800">Product Details</h2>
        <div class="w-24 h-1 bg-blue-500 mt-2 mb-6"></div>
    </div>

    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
        <div class="p-6 md:p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Column 1 -->
                <div class="space-y-5">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ProductName)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.ProductName)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ProductCode)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.ProductCode)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Brand.BrandName)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.Brand.BrandName)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Category.CategoryName)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.Category.CategoryName)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.BasePrice)</span>
                        <span class="text-lg font-semibold text-blue-600 mt-1">@Html.DisplayFor(model => model.BasePrice)</span>
                    </div>
                </div>

                <!-- Column 2 -->
                <div class="space-y-5">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Gender)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.Gender)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Material)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.Material)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.IsActive)</span>
                        <span class="text-lg font-semibold @(Model.IsActive.HasValue && Model.IsActive.Value ? "text-green-600" : "text-red-600") mt-1">
                            @(Model.IsActive.HasValue && Model.IsActive.Value ? "Active" : "Inactive")
                        </span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.CreatedDate)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.CreatedDate)</span>
                    </div>

                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Employee.Username)</span>
                        <span class="text-lg font-semibold text-gray-800 mt-1">@Html.DisplayFor(model => model.Employee.Username)</span>
                    </div>
                </div>
            </div>

            <!-- Description (full width) -->
            <div class="mt-6 pt-6 border-t border-gray-200">
                <div class="flex flex-col">
                    <span class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Description)</span>
                    <p class="text-gray-700 mt-2 leading-relaxed">
                        @Html.DisplayFor(model => model.Description)
                    </p>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="bg-gray-50 px-6 py-4 flex justify-between items-center">
            <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to List
            </a>
            <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Edit Product
            </a>
        </div>
    </div>
</div>
