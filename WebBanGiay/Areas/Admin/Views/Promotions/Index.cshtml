@model IEnumerable<WebBanGiay.Models.Promotion>

@{
    ViewBag.Title = "Quản lý Khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tags me-2"></i>Danh sách Khuyến mãi
                    </h3>
                    <div>
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Thêm mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.PromotionName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.DiscountType)</th>
                                    <th>@Html.DisplayNameFor(model => model.DiscountValue)</th>
                                    <th>@Html.DisplayNameFor(model => model.MaxDiscountAmount)</th>
                                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                                    <th>@Html.DisplayNameFor(model => model.UsageLimit)</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.PromotionName)</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <span class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@Html.DisplayFor(modelItem => item.DiscountType)</span>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">@Html.DisplayFor(modelItem => item.DiscountValue)</span>
                                        </td>
                                        <td>
                                            @if (item.MaxDiscountAmount.HasValue)
                                            {
                                                <span class="text-muted">@item.MaxDiscountAmount.Value.ToString("N0") VNĐ</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="text-primary">@item.StartDate.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td>
                                            <span class="text-warning">@item.EndDate.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Không hoạt động</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.UsageLimit.HasValue)
                                            {
                                                <span class="text-muted">@item.UsageLimit.Value</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không giới hạn</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = item.PromotionID })" 
                                                   class="btn btn-sm btn-outline-info" 
                                                   title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = item.PromotionID })" 
                                                   class="btn btn-sm btn-outline-warning" 
                                                   title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.PromotionID })" 
                                                   class="btn btn-sm btn-outline-danger" 
                                                   title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
