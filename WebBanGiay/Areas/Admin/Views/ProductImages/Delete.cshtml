@model WebBanGiay.Models.ProductImage

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/NhanVienBanHang/Views/Shared/_Layout_NVBH.cshtml";
}

<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Delete</h2>

    <h3 class="text-xl font-semibold text-gray-700 mb-6">Are you sure you want to delete this?</h3>

    <div class="space-y-4">
        <h4 class="text-lg font-medium text-gray-700">ProductImage</h4>
        <hr class="border-gray-300 my-2">

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ImageURL)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.ImageURL)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ImageType)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.ImageType)</dd>
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.IsActive)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.IsActive)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.UploadedDate)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.UploadedDate)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Product.ProductName)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Product.ProductName)</dd>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-6 flex items-center space-x-4">
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                    Delete
                </button>
                <span class="text-gray-500">|</span>
                <a href="@Url.Action("Index")" class="text-blue-600 hover:text-blue-800 hover:underline">
                    Back to List
                </a>
            </div>
        }
    </div>
</div>