@model WebBanGiay.Models.Brand

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="max-w-xl mx-auto mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Delete Brand</h2>
    <div class="mb-6 text-red-600 font-semibold">Are you sure you want to delete this?</div>
    <div class="space-y-4 mb-6">
        <div class="flex justify-between border-b pb-2">
            <span class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.BrandName):</span>
            <span class="text-gray-900">@Html.DisplayFor(model => model.BrandName)</span>
        </div>
        <div class="flex justify-between border-b pb-2">
            <span class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Description):</span>
            <span class="text-gray-900">@Html.DisplayFor(model => model.Description)</span>
        </div>
        <div class="flex justify-between border-b pb-2">
            <span class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Country):</span>
            <span class="text-gray-900">@Html.DisplayFor(model => model.Country)</span>
        </div>
        <div class="flex justify-between border-b pb-2">
            <span class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.IsActive):</span>
            <span class="text-gray-900">@Html.DisplayFor(model => model.IsActive)</span>
        </div>
        <div class="flex justify-between border-b pb-2">
            <span class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.CreatedDate):</span>
            <span class="text-gray-900">@Html.DisplayFor(model => model.CreatedDate)</span>
        </div>
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="flex space-x-4 mt-8">
            <input type="submit" value="Delete" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded shadow transition duration-150" />
            <a href="@Url.Action("Index")" class="text-gray-600 hover:text-blue-600 underline self-center">Back to List</a>
        </div>
    }
</div>
