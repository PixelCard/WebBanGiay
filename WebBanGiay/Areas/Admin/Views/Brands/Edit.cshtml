@model WebBanGiay.Models.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="max-w-xl mx-auto mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit Brand</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.BrandID)
        @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })
        <div class="space-y-5">
            <div>
                @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } })
                @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div>
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div>
                @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } })
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div>
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                <div class="flex items-center space-x-2">
                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "rounded border-gray-300 text-blue-600 focus:ring-blue-500" } })
                    <span class="text-gray-600">Active</span>
                </div>
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div>
                @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50", Type = "date" } })
                @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div class="flex justify-between items-center pt-4">
                <input type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded shadow transition duration-150" />
                <a href="@Url.Action("Index")" class="text-gray-600 hover:text-blue-600 underline">Back to List</a>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <!-- Thêm thư viện jQuery UI cho date picker -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            // Khởi tạo date picker
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd", // Định dạng ngày tháng
                changeMonth: true,
                changeYear: true,
                yearRange: "1900:2030" // Phạm vi năm
            });

            // Hoặc sử dụng input type="date" mặc định của HTML5
            // $(".datepicker").attr("type", "date");
        });
    </script>
}
