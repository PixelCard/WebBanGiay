@model WebBanGiay.Models.Size

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="max-w-xl mx-auto mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit Size</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.SizeID)
        @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })
        <div class="space-y-5">
            <div>
                @Html.LabelFor(model => model.SizeName, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.SizeName, new { htmlAttributes = new { @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } })
                @Html.ValidationMessageFor(model => model.SizeName, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div>
                @Html.LabelFor(model => model.SizeType, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                <select name="SizeType" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                    <option value="">-- Select Size Type --</option>
                    <option value="SM" @(Model.SizeType == "SM" ? "selected" : "")>SM</option>
                    <option value="XM" @(Model.SizeType == "XM" ? "selected" : "")>XM</option>
                    <option value="XL" @(Model.SizeType == "XL" ? "selected" : "")>XL</option>
                    <option value="XXL" @(Model.SizeType == "XXL" ? "selected" : "")>XXL</option>
                    <option value="XXXL" @(Model.SizeType == "XXXL" ? "selected" : "")>XXXL</option>
                </select>
                @Html.ValidationMessageFor(model => model.SizeType, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div>
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                <div class="flex items-center space-x-2">
                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "rounded border-gray-300 text-blue-600 focus:ring-blue-500" } })
                    <span class="text-gray-600">Active</span>
                </div>
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>
            <div class="flex justify-between items-center pt-4">
                <input type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded shadow transition duration-150" />
                <a href="@Url.Action("Index")" class="text-gray-600 hover:text-blue-600 underline">Back to List</a>
            </div>
        </div>
    }
</div>
