@model IEnumerable<WebBanGiay.Models.Account>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fa fa-users me-2"></i>Quản lý tài khoản
                    </h4>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i>Thêm tài khoản mới
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fa fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fa fa-envelope me-1"></i>Email
                                    </th>
                                    <th>
                                        <i class="fa fa-user me-1"></i>Tên người dùng
                                    </th>
                                    <th>
                                        <i class="fa fa-shield me-1"></i>Vai trò
                                    </th>
                                    <th>
                                        <i class="fa fa-check-circle me-1"></i>Trạng thái tài khoản
                                    </th>
                                    <th>
                                        <i class="fa fa-info-circle me-1"></i>Trạng thái bổ sung
                                    </th>
                                    <th>
                                        <i class="fa fa-cogs me-1"></i>Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-envelope text-muted me-2"></i>
                                                <span class="fw-medium">@Html.DisplayFor(modelItem => item.Email)</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-user text-muted me-2"></i>
                                                <span>@Html.DisplayFor(modelItem => item.UserName)</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.Role != null)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="fa fa-shield me-1"></i>
                                                    @Html.DisplayFor(modelItem => item.Role.TenRole)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Chưa phân quyền</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.statusAccount != null)
                                            {
                                                if (item.statusAccountID == 3)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fa fa-ban me-1"></i>
                                                        @Html.DisplayFor(modelItem => item.statusAccount.statusName)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fa fa-check-circle me-1"></i>
                                                        @Html.DisplayFor(modelItem => item.statusAccount.statusName)
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Chưa cập nhật</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.statusAccount1 != null)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="fa fa-info-circle me-1"></i>
                                                    @Html.DisplayFor(modelItem => item.statusAccount1.statusName)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-dark">Không có</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", new { id = item.IDTK })" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Details", new { id = item.IDTK })" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                @if (item.statusAccountID != 3)
                                                {
                                                    <a href="@Url.Action("Block", new { id = item.IDTK })" class="btn btn-sm btn-outline-warning" title="Khóa tài khoản" 
                                                       onclick="return confirm('Bạn có chắc chắn muốn khóa tài khoản này không?')">
                                                        <i class="fa fa-ban"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" disabled title="Tài khoản đã bị khóa">
                                                        <i class="fa fa-ban"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    border-radius: 15px;
}

.card-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 15px 15px 0 0 !important;
    border: none;
}

.table-dark {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    border: none;
}

.table-striped > tbody > tr:nth-of-type(odd) > td {
    background-color: rgba(0,0,0,.02);
}

.btn-group .btn {
    border-radius: 8px;
    margin: 0 2px;
    transition: all 0.3s ease;
}

.btn-group .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.badge {
    font-size: 0.85em;
    padding: 8px 12px;
    border-radius: 20px;
}

.table-responsive {
    border-radius: 10px;
    overflow: hidden;
}
</style>
