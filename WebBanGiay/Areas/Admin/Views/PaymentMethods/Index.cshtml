@model IEnumerable<WebBanGiay.Models.PaymentMethod>

@{
    ViewBag.Title = "Quản lý phương thức thanh toán";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fa fa-credit-card me-2"></i>Quản lý phương thức thanh toán
                    </h4>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i>Thêm phương thức mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fa fa-credit-card me-1"></i>Tên phương thức
                                    </th>
                                    <th>
                                        <i class="fa fa-info-circle me-1"></i>Mô tả
                                    </th>
                                    <th>
                                        <i class="fa fa-toggle-on me-1"></i>Trạng thái
                                    </th>
                                    <th>
                                        <i class="fa fa-cogs me-1"></i>Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-credit-card text-muted me-2"></i>
                                                <span class="fw-medium">@Html.DisplayFor(modelItem => item.MethodName)</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-info-circle text-muted me-2"></i>
                                                <span>@Html.DisplayFor(modelItem => item.Description)</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fa fa-check-circle me-1"></i>Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fa fa-times-circle me-1"></i>Không hoạt động
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", new { id = item.PaymentMethodID })" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Details", new { id = item.PaymentMethodID })" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.PaymentMethodID })" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    border-radius: 15px;
}

.card-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 15px 15px 0 0 !important;
    border: none;
}

.table-dark {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    border: none;
}

.table-striped > tbody > tr:nth-of-type(odd) > td {
    background-color: rgba(0,0,0,.02);
}

.btn-group .btn {
    border-radius: 8px;
    margin: 0 2px;
    transition: all 0.3s ease;
}

.btn-group .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.badge {
    font-size: 0.85em;
    padding: 8px 12px;
    border-radius: 20px;
}

.table-responsive {
    border-radius: 10px;
    overflow: hidden;
}
</style>
